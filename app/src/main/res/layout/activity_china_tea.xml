<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChinaTeaActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/kaiti"
            android:gravity="center_vertical|right"
            android:text="个人\n收藏" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:fontFamily="@font/kaiti"
            android:text="个人\n中心" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/logo2"
            android:onClick="LoginActivity"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="-8dp">

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/green" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            app:srcCompat="@drawable/main1" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/green" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/yellow"
            android:fontFamily="@font/kaiti"
            android:gravity="center"
            android:text="中国茶道四大要素"
            android:onClick="EndActivity"
            android:textSize="40dp" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@color/green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="78dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:onClick="part1Activity"
                app:srcCompat="@drawable/part1" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="78dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:onClick="part2Activity"
                app:srcCompat="@drawable/part2" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="78dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:onClick="part3Activity"
                app:srcCompat="@drawable/part3" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="78dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:onClick="part4Activity"
                app:srcCompat="@drawable/part4" />

        </LinearLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="@color/green" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            app:srcCompat="@drawable/main2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>